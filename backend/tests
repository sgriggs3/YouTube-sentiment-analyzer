import unittest
from backend.app import app

class BackendAPITestCase(unittest.TestCase):
    def setUp(self):
        self.app = app.test_client()
        self.app.testing = True

    def test_get_video_metadata(self):
        response = self.app.get('/api/video/VIDEO_ID')
        self.assertEqual(response.status_code, 200)
        self.assertIn('title', response.json)
        self.assertIn('description', response.json)

    def test_get_sentiment_analysis(self):
        response = self.app.get('/api/sentiment/VIDEO_ID')
        self.assertEqual(response.status_code, 200)
        self.assertIn('sentiment', response.json)
        self.assertIn('score', response.json)

    def test_get_data_visualization(self):
        response = self.app.get('/api/visualization/VIDEO_ID')
        self.assertEqual(response.status_code, 200)
        self.assertIn('chart', response.json)

if __name__ == '__main__':
    unittest.main()
